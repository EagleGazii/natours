mixin reviewCard(review)
    .reviews__card
        .reviews__avatar 
            img.reviews__avatar-img(src=`/img/users/${review.user.photo}` alt=`Im ${review.user.name.split(' ')[1]}`)
            h4.reviews__user= review.user.name 
        p.reviews__text= review.review
        .reviews__rating
            each star in [1,2,3,4,5] 
                svg.reviews__star(class=`reviews__star--${review.rating >= star ? 'active':'inactive'}`)
                    use(xlink:href='/img/icons.svg#icon-star').reviews__card
